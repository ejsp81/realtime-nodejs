extends ../layout

block scripts
    script(src='/socket.io/socket.io.js')

block layout-content

  div
    .container
      br
      table#myTable.table
        thead
          tr
            th Team
            th Shield
        tbody
    script.
      getTeams();  
      $(function () {
        var socket = io();
        socket.on('cambio', function(data){
          $('#myTable tbody tr').remove();
            data.forEach(addRow);
          });
        });
      function addRow(data){
        $('#myTable > tbody').append(`
          <tr>
          <td>${data.name}</td>
          <td><img src='${data.shield}' width='80px'/></td>
          </tr>`);
        }
      function getTeams(){
        $.get('http://localhost:3000/teams/get', (data) => {
          data.forEach(addRow);
        });
      }
    
  hr
  footer
  .container
    div(align='center')
